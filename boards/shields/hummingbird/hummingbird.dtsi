/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <30>;
        rows = <1>;
        map = <
            00 01 02 03 04 /**/ 19 18 17 16 15
            05 06 07 08 09 /**/ 24 23 22 21 20
               10 11 12    /**/    27 26 25
                     13 14 /**/ 29 28
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        label = "KSCAN";
    };
};
